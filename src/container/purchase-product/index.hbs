{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}
<main class="main">
  {{> heading title="Інформація про товар" }}

  {{#with data.product}}
  <form method="POST" action="/purchase-create?id={{id}}">
    <div class="product-info">
      <img src="{{img}}" alt="Товар 1" class="product-info-image">
      <h2 class="product-info-title">{{title}}</h2>
      <p class="product-info-description"> {{description}}</p>

      {{> divider}}

      {{#each caterory}}
      <span class="product-info-caterory product-info-caterory--{{id}}">{{text}}</span>
      {{/each}}

      {{> divider}}

      {{> field label="Кількість" type="number" name="amount" value="1"}}

      <button class="product-info-button">Купити зараз: {{price}} грн</button>

    </div>

  </form>

  {{/with}}

  {{> heading title="Інформація про товар" }}

  <div class="product-list">
    {{#each data.list}}
    {{> purchase-product data=this}}

    {{/each}}

  </div>




</main>




