{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<main class="main">
  {{#with data}}
  <div class="main-content">
    <div class="playlist-add">
      <h1 class="title">{{name}}</h1>
      <a href="/spotify-index?playlistId={{playlistId}}" class="add-button">
        Додати до бібліотеки
        <img src="/svg/add-button.svg">
      </a>
    </div>


    <a href="/spotify-playlist-add?playlistId={{playlistId}}" class="add-button">
      <img src="/svg/add-button.svg">
      Додати до плейліста
    </a>


    <ul class="track-list">
      {{#each tracks}}
      <li class="track">
        <img src="{{image}}" alt="{{name}}">
        <div class="track-content">
          <strong class="track-name">{{name}}</strong>
          <em class="track-author">{{author}}</em>
        </div>
        <a href="/spotify-track-delete?playlistId={{../playlistId}}&trackId={{id}}">
          <img src="/svg/delete-button.svg">
        </a>
      </li>
      {{/each}}
    </ul>
  </div>
  {{/with}}
</main>





